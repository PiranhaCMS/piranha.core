@inject ManagerLocalizer Localizer

<div class="modal" id="mediaFolderModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-folder"></i> @Localizer.Media["Add folder"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>@Localizer.Media["Folder name"]</label>
                    <input v-model="folder.name" id="mediaFolderName" type="text" class="form-control">
                </div>
            </div>
            <div class="modal-footer">
                <button v-on:click.prevent="savefolder()" class="btn btn-success btn-labeled">
                    <i class="fas fa-check"></i>@Localizer.General["Save"]
                </button>
            </div>
        </div>
    </div>
</div>