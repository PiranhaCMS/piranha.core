@inject IAuthorizationService Auth
@inject ManagerLocalizer Localizer

@if ((await Auth.AuthorizeAsync(User, Permission.ContentSave)).Succeeded)
{
    <button  v-on:click.prevent="save" class="btn btn-primary btn-labeled" title="@Localizer.General["Save"]">
        <i class="fas fa-save"></i>
        @Localizer.General["Save"]
    </button>
}