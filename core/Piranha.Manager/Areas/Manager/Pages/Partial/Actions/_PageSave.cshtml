@inject ManagerLocalizer Localizer

<div class="btn-group" role="group">
    <button v-on:click.prevent="saveDraft" type="button" class="btn btn-info btn-labeled">
        <i class="fas fa-save"></i>
        @Localizer.General["Save Draft"]
    </button>
    <div class="btn-group" role="group" v-if="state === 'draft'">
        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="btnGroupDrop1">
            <a v-on:click.prevent="preview" class="dropdown-item" href="#">@Localizer.General["Preview"]</a>
            <a v-on:click.prevent="revert" class="dropdown-item" href="#">@Localizer.General["Revert"]</a>
        </div>
    </div>
</div>

<div class="btn-group" role="group">
    <button v-on:click.prevent="save" type="button" class="btn btn-success btn-labeled">
        <i class="fas fa-check"></i>
        @Localizer.General["Publish"]
    </button>
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="btnGroupDrop1">
            <a v-on:click.prevent="preview" class="dropdown-item" href="#">@Localizer.General["Preview"]</a>
            <hr v-if="state !== 'new'">
            <a v-if="state !== 'new' && state !== 'unpublished'" v-on:click.prevent="unpublish" class="dropdown-item" href="#">@Localizer.General["Unpublish"]</a>
            <a v-if="state !== 'new'" v-on:click.prevent="remove" class="dropdown-item text-danger" href="#">@Localizer.General["Delete"]</a>
        </div>
    </div>
</div>
