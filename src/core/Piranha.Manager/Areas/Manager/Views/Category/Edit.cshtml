@model Piranha.Areas.Manager.Models.CategoryEditModel
@{
    ViewBag.Title = "Edit category";
}

@using (var form = Html.BeginForm("Save", "Category", FormMethod.Post, new { @class = "form", @role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="row">
        <div class="col-sm-12 buttons">
            <!-- Actions -->
            <div class="btn-group">
                <button type="submit" class="btn btn-labeled btn-success">
                    <span class="btn-label">
                        <i class="glyphicon glyphicon-ok"></i>
                    </span>
                    Save
                </button>
                <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-right" role="menu">
                    <li><a href="@Url.Action("Delete", new { @id = Model.Id })">Delete category</a></li>
                </ul>
            </div>
        </div>
    </div>    

    <div class="form-group">
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control title", @placeholder = "Category title" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>
    
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Basic settings</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Slug, "Slug")
                        @Html.TextBoxFor(m => m.Slug, new { @class = "form-control small", @placeholder = "The unique slug. Will be generated automatically" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Enable archive</label>
                        <div class="checkbox">  
                            <label>
                                <input type="checkbox" checked disabled> If an archive page should be generated for this category
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Archive settings</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ArchiveTitle, "Title")
                        @Html.TextBoxFor(m => m.ArchiveTitle, new { @class = "form-control", @placeholder = "Archive title" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ArchiveKeywords, "Keywords")
                        @Html.TextBoxFor(m => m.ArchiveKeywords, new { @class = "form-control small", @placeholder = "Archive meta keywords" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ArchiveRoute, "Route")
                        @Html.TextBoxFor(m => m.ArchiveRoute, new { @class = "form-control small", @placeholder = "Optional route" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ArchiveDescription, "Description")
                        @Html.TextAreaFor(m => m.ArchiveDescription, new { @class = "form-control", @rows = 7, @placeholder = "Archive meta description" })
                    </div>                    
                </div>
            </div>
        </div>
    </div>    
}